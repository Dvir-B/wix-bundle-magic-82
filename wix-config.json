
{
  "name": "wix-bundle-magic",
  "version": "1.0.0",
  "modules": {
    "dashboard": {
      "pages": [
        {
          "name": "Bundles Dashboard",
          "url": "/dashboard",
          "seoTitle": "Manage Product Bundles",
          "seoDescription": "Create and manage product bundles for your Wix store"
        },
        {
          "name": "Create Bundle",
          "url": "/dashboard/create-bundle",
          "seoTitle": "Create New Bundle",
          "seoDescription": "Create a new product bundle for your Wix store"
        }
      ]
    },
    "settings": {
      "pages": [
        {
          "name": "App Settings",
          "url": "/settings",
          "seoTitle": "App Settings",
          "seoDescription": "Configure your bundle app settings"
        }
      ],
      "specs": {
        "sections": [
          {
            "title": "General Settings",
            "settings": [
              {
                "name": "currencySymbol",
                "type": "string",
                "label": "Currency Symbol",
                "defaultValue": "$",
                "required": true
              },
              {
                "name": "defaultDiscountPercentage",
                "type": "number",
                "label": "Default Discount Percentage",
                "defaultValue": 10,
                "required": true
              }
            ]
          }
        ]
      }
    }
  },
  "scopes": [
    "manage-products",
    "read-catalog",
    "read-products",
    "write-products"
  ],
  "capabilities": {
    "dataHooks": {
      "bundles": {
        "description": "Store and manage product bundles"
      }
    }
  }
}
